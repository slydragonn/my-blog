---
import PageLayout from "@/layouts/Base";
import BlogPostPreview from "@/components/BlogPostPreview";
import SocialList from "@/components/SocialList";
import { sortMDByDate } from "@/util";
import type { Post } from "@/types";

const meta = {
	title: "slydragonn - Blog",
	description: "The perfect starter for your perfect blog.",
};

const MAX_POSTS = 10;
const allPosts = await Astro.glob<Post>("./posts/*.mdx");
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);
---

<PageLayout meta={meta}>
	<section>
		<h1 class="mb-6 title">Hello World!</h1>
		<p class="mb-4">
			Hi, Iâ€™m a Front-End Developer and this is my blog, where I write about programming, tools, and other exciting topics.
		</p>
		<SocialList />
	</section>
	<section aria-label="Blog post list" class="mt-16">
		<h2 class="mb-4 text-xl title">Posts</h2>
		<ul class="space-y-4 sm:space-y-2">
			{
				allPostsByDate.map((p) => (
					<li class="[&_q]:w-full flex flex-wrap items-center gap-x-2">
						<BlogPostPreview post={p} as="h2" />
					</li>
				))
			}
		</ul>
	</section>
	<section class="mt-16">
		<h2 class="mb-4 text-xl title">Topics</h2>
		<ul class="space-y-4 sm:space-y-2">
			<li>
				<p class="inline-block sm:mt-2">
					Front-End | Javascript | TypeScript | HTML | CSS
				</p>
			</li>
			<li>
				<p class="inline-block sm:mt-2">Programming | Software Architecture</p>
			</li>
			<li>
				<p class="inline-block sm:mt-2">Frameworks | React | Vue | Astro</p>
			</li>
			<li>
				<p class="inline-block sm:mt-2">Python | C#</p>
			</li>
		</ul>
	</section>
</PageLayout>
